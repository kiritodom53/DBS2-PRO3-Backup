@model MoYobuDb.Models.Tables.User

@{
    ViewData["Title"] = "Editovat img";
    Layout = "_Layout_SETINGS";
}




<form enctype="multipart/form-data" asp-action="EditProfileImg" method="post">
    <div class="form-group">
        <div class="file">
            <div>
                <label for="image_uploads">Zvolte soubor</label>
                <input class="file-input"
                       type="file"
                       id="image_uploads"
                       name="image_uploads"
                       accept=".jpg, .jpeg, .png"
                       asp-for="profileImg">
                <span asp-validation-for="profileImg"></span>
            </div>
            <div class="preview">
                <p>Žádný soubor nebyl zvolen</p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input asp-page-handler="Upload" class="btn" type="submit" value="Upload"/>
    </div>

</form>
<img src="~/@Html.DisplayFor(model => model.profileImg)" alt="profile img" width="150">
