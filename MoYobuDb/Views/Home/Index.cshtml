@model MoYobuDb.Models.LastMediaModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout_HomePage";
}
<script src="~/js/jssor.slider-28.0.0.min.js" type="text/javascript"></script>

<div class="main-content">

    <div class="anime">
        <h2>Anime</h2>
        <div class="galery-width" id="jssor_1" style="position:relative;margin:25px auto 25px auto;top:0px;left:0px;height:143px;overflow:hidden;visibility:hidden;">
            <!-- Loading Screen -->
            <div data-u="loading" class="jssorl-009-spin" style="position:absolute;top:0px;left:0px;width:100%;height:100%;text-align:center;background-color:rgba(0,0,0,0.7);">
                <img style="margin-top:-19px;position:relative;top:50%;width:38px;height:38px;" src="~/images/spin.svg"/>
            </div>
            <div class="galery-width" data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;height:143px;overflow:hidden;">
                @foreach (var item in Model.lastAnimes)
                {
                    <a asp-controller="Animes" asp-action="Details" asp-route-id="@item.animeId" asp-route-name="@item.romajiTitle" rel="nofollow" data-fillmode="1">
                        @* <img data-u="image" src="https://s4.anilist.co/file/anilistcdn/media/anime/cover/large/bx17265-95SA9keO8Jtv.jpg"/> *@

                        @if (item.coverImage == null)
                        {
                            <img data-u="image" src="~/images/noimg.png" alt="Voice actor"/>
                        }
                        else if (item.coverImage.Split("/")[0] == "uploads")
                        {
                            <img data-u="image" src="~/@item.coverImage" alt="Voice actor"/>
                        }
                        else
                        {
                            <img data-u="image" src="@item.coverImage" alt="Voice actor"/>
                        }


                        <div class="name">@Html.DisplayFor(model => item.romajiTitle)</div>
                    </a>
                }
            </div><a data-scale="0" href="https://www.jssor.com" style="display:none;position:absolute;">carousel slider</a>
            <!-- Arrow Navigator -->
            <div data-u="arrowleft" class="jssora092 arrows" style="left:-1px;" data-autocenter="2" data-scale="0.75" data-scale-left="0">
                <svg viewbox="-199 -3000 9600 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
